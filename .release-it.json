{
  "$schema": "https://unpkg.com/release-it/schema/release-it.json",
  "github": {
    "release": true
  },
  "npm": {
    "publish": true,
    "publishPath": "./dist/"
  },
  "git": {
    "requireBranch": false,
    "commitMessage": "Release: v${version}"
  },
  "hooks": {
    "before:init": ["git pull", "pnpm run typecheck"],
    "after:bump": "pnpm run build"
  }
}
